CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
MAME=school
RM=rm -f
CFLAGS=-Wall -Werror -Wextra -pedantic

all: school

$(NAME): $(SRC)
	$(CC) $(CFLAGS) -c -o main.o main.c
	$(CC) $(CFLAGS) -c -o school.o school.c
	$(CC) $(CFLAGS) -o $(NAME) school.o main.o

clean:
	-$(RM) *~ .*~ *.out

oclean:
	-$(RM) $(OBJ)

fclean:
	-$(RM) *~ .*~ *a.out $(OBJ)

re: all
